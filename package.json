{
  "name": "panzoom",
  "version": "4.0.0-pre",
  "description": "Pan and zoom elements using CSS transforms.",
  "main": "dist/panzoom.js",
  "scripts": {
    "type-check": "tsc -p tsconfig.json --noEmit",
    "tslint": "tslint -p tsconfig.json -c tslint.json",
    "prettier": "prettier --check \"**/*.tsx\" \"**/*.ts\" \"**/*.js\" \"test/demo.html\"",
    "lint": "concurrently \"yarn type-check\" \"yarn tslint\" \"yarn prettier\"",
    "lint:fix": "concurrently \"yarn type-check\" \"yarn tslint --fix\" \"precise-commits\"",
    "test:unit": "karma start",
    "test:unit:watch": "karma start --singleRun=false --autoWatch",
    "test": "yarn lint && yarn test:unit",
    "dev": "rollup --config --watch",
    "docs": "yarn typedoc --out docs/",
    "clean": "rm -rf dist/",
    "minify": "uglifyjs --compress --mangle --output dist/panzoom.min.js -- dist/panzoom.js",
    "build": "yarn clean && rollup --config && yarn minify",
    "release": "semantic-release"
  },
  "files": [
    "MIT-License.txt",
    "panzoom.ts",
    "panzoom.d.ts",
    "dist/panzoom.js",
    "dist/panzoom.min.js",
    "README.md"
  ],
  "keywords": [
    "panzoom",
    "pan",
    "zoom",
    "draggable",
    "dragging",
    "drag"
  ],
  "repository": "timmywil/panzoom",
  "license": "MIT",
  "author": {
    "name": "Timmy Willison",
    "email": "4timmywil@gmail.com"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@commitlint/prompt": "^7.5.0",
    "@semantic-release/exec": "^3.3.2",
    "@semantic-release/git": "^7.0.8",
    "@types/mocha": "^5.2.6",
    "commitizen": "^3.1.1",
    "commitlint": "^7.5.2",
    "concurrently": "^4.1.0",
    "husky": "^2.1.0",
    "karma": "^4.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-typescript": "^4.0.0",
    "mocha": "^6.1.4",
    "precise-commits": "^1.0.2",
    "prettier": "^1.17.0",
    "puppeteer": "^1.15.0",
    "rollup": "^1.10.1",
    "rollup-plugin-typescript2": "^0.21.0",
    "semantic-release": "^15.13.3",
    "serve": "^11.0.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.1.6",
    "uglify-js": "^3.4.9"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "jsxBracketSameLine": true,
    "arrowParens": "always"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:fix",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "branch": "master",
    "ci": false,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "yarn build && yarn docs"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "docs",
            "dist",
            "package.json"
          ]
        }
      ],
      "@semantic-release/github"
    ],
    "tagFormat": "${version}"
  }
}
